---
import { Icon } from "astro-icon/components";
import Layout from "../layouts/Layout.astro";
import Project from "../components/Project.astro";
import ContactLink from "../components/ContactLink.astro";
---

<Layout>
  <section
    class="bg-zinc-950 size-full flex min-h-dvh lg:justify-center px-8 sm:py-12 justify-start py-12"
  >
    <div class="lg:w-[50%] w-full flex flex-col">
      <h1 class="text-xl font-normal mb-4">ronish rohan</h1>
      <div class="flex flex-col mb-4">
        <div class="flex gap-4 items-center mb-4 text-zinc-400">
          <Icon name="location" />
          <div>bangalore, india</div>
        </div>
        <div class="flex gap-4 items-center mb-4 text-zinc-400">
          <Icon name="graduation-cap" />
          <div>cmrit, 2023 - 2027</div>
        </div>
      </div>
      <p class="mb-8">
        i'm a 19 y/o cs student. i love making things. currently
        i am in my second year trying to make cool stuff.
      </p>
      <section class="flex flex-col w-full h-fit mb-8">
        <h1 class="text-zinc-400 mb-4 flex items-center leading-3">
          <div class="-translate-y-[2px]">projects</div>
          <a
            href="https://nihal-cooked.vercel.app"
            class="p-2 border-2 ml-auto border-transparent flex hover:border-zinc-700 rounded-lg text-zinc-400 fill-zinc-400 hover:text-white hover:fill-white leading-3 gap-2 items-center"
          >
            <div class="-translate-y-[2px]">more</div>
            <Icon name="fast-arrow-right" />
          </a>
        </h1>
        <div class="grid grid-cols-1 sm:grid-cols-2 w-full gap-4 h-fit">
          <Project
            title="trvlgo"
            description="a travel assistant"
            link="https://trvlgo.vercel.app"
            date="june, 2024"
          />
          <Project
            title="leetbuddy"
            description="a leetcode social-stat buddy"
            link="https://leetbuddy.vercel.app"
            date="october, 2024"
          />
          <Project
            title="git"
            description="a full-stack todolist"
            link="https://getitdone-theta.vercel.app"
            date="february, 2024"
          />
          <Project
            title="twitter-clone"
            description="a twitter clone"
            link="https://twit-clone-coral.vercel.app"
            date="january, 2024"
          />
        </div>
      </section>
      <section class="mb-8">
        <h2 class="text-zinc-400 mb-4">contact</h2>
        <div
          class="flex gap-2 h-fit sm:gap-0 flex-col sm:flex-row justify-between"
        >
          <ContactLink title="email" link="mailto:rahmannihal72@gmail.com" />
          <ContactLink title="github" link="https://github.com/amoreX" />
          <ContactLink
            title="discord"
            link="https://discordapp.com/users/502013607475806228"
          />
          <ContactLink
            title="linkedin"
            link="https://www.linkedin.com/in/nihal-is-coding/"
          />
          <ContactLink
            title="instagram"
            link="https://www.instagram.com/nihal.iscooked/"
          />
        </div>
      </section>
      <div class="w-full border-t-2 border-zinc-700 mb-1"></div>
      <div class="relative  text-zinc-400 fill-zinc-400 text-sm w-full flex">
        <div class="flex asb">Nihal Rahman</div>
        <a href="https://astro.build/" class="ml-auto group hover:underline">
          <div class="flex items-center gap-2">
            <div>made with</div>
