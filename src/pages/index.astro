---
import { Icon } from "astro-icon/components";
import Layout from "../layouts/Layout.astro";
import Project from "../components/Project.astro";
import ContactLink from "../components/ContactLink.astro";
---

<Layout>
  <section
    class="bg-zinc-950 size-full flex min-h-dvh lg:justify-center px-8 justify-start py-16"
  >
    <div class="lg:w-[50%] w-full flex flex-col">
      <h1 class="text-xl font-normal mb-4">ronish rohan</h1>
      <div class="flex flex-col mb-4">
        <div class="flex gap-4 items-center mb-4 text-zinc-400">
          <Icon name="location" />
          <div>bangalore, india</div>
        </div>
        <div class="flex gap-4 items-center mb-4 text-zinc-400">
          <Icon name="graduation-cap" />
          <div>cmrit, 2023 - 2027</div>
        </div>
      </div>
      <p class="mb-8">
        i'm a 19 y/o cs student. i love designing and building things. currently
        i am in my second year trying to build my skills. i love music and
        movies (and dogs and cats).
      </p>
      <section class="flex flex-col w-full h-fit mb-8">
        <h1 class="text-zinc-400 mb-4 flex items-center leading-3">
          <div class="-translate-y-[2px]">projects</div>
          <a
            href="https://github.com/ronishrohan"
            class="p-2 border-2 ml-auto border-transparent flex hover:border-zinc-700 rounded-lg text-zinc-400 fill-zinc-400 hover:text-white hover:fill-white leading-3 gap-2 items-center"
          >
            <div class="-translate-y-[2px]">more</div>
            <Icon name="fast-arrow-right" />
          </a>
        </h1>
        <div class="grid grid-cols-1 sm:grid-cols-2 w-full gap-4 h-fit">
          <Project
            title="waffle"
            description="a twitter clone"
            link="https://github.com/ronishrohan/twitter-clone"
            date="april, 2024"
          />
          <Project
            title="paypeek"
            description="a app to manage invoices"
            link="https://github.com/ronishrohan/paypeek"
            date="february, 2024"
          />
          <Project
            title="calculator"
            description="a 3d calculator"
            link="https://github.com/ronishrohan/calculator"
            date="february, 2024"
          />
          <Project
            title="reddit-clone"
            description="a reddit clone"
            link="https://github.com/ronishrohan/reddit-clone"
            date="january, 2024"
          />
        </div>
      </section>
      <section>
        <h2 class="text-zinc-400 mb-4">contact</h2>
        <div
          class="flex gap-2 h-fit sm:gap-0 gap-2 flex-col sm:flex-row justify-between"
        >
          <ContactLink title="email" link="mailto:ronish.rohan@gmail.com" />
          <ContactLink title="github" link="https://github.com/ronishrohan" />
          <ContactLink title="discord" link="https://discordapp.com/users/769140296939470859" />
          <ContactLink title="linkedin" link="https://www.linkedin.com/in/ronish-rohan-93aab627a/" />
          <ContactLink
            title="instagram"
            link="https://instagram.com/ronish.rohan"
          />
        </div>
      </section>
    </div>
  </section>
</Layout>
